<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-2"><h4>商品編集</h4></div>
  <div class="col-xs-9"></div>
</div>

<%= form_for(@item, url:admin_item_path) do |f| %>
  <div class="row">
     <div class="col-xs-1"></div>
       <div class="col-xs-10">
         <table class="table table-borderless">

            <tr>
              <th class="col-xs-2">商品画像</th>
              <td><%= f.attachment_field :image %></td>
            </tr>

            <tr>
              <th class="col-xs-2">動画</th>
              <td>
                <%= f.radio_button :video,1%> あり <%= f.text_field :video_url, :placeholder =>"動画URL" %>
                <br>
                <%= f.radio_button :video,0%> なし
              </td>
            </tr>

            <tr>
              <th class="col-xs-2">説明書</th>
              <td>
                <%= f.radio_button :manual,1%> あり <%= f.text_field :manual_url, :placeholder =>"説明書URL" %>
                <br>
                <%= f.radio_button :manual,0%> なし
              </td>
            </tr>

            <tr>
              <th>レンタル品名</th>
              <td><%= f.text_field :name %></td>
            </tr>

            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :introduction %></td>
            </tr>

            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: '-- 選択してください --'} %></td>
            </tr>

            <tr>
              <th>税抜価格</th>
              <td><%= f.text_field :price %>円</td>
            </tr>

            <tr>
              <th>一日追加料金(税抜き)</th>
              <td><%= f.text_field :add_price %>円</td>
            </tr>


            <tr>
              <th class="col-xs-2">消費電力</th>
              <td>
                <%= f.radio_button :power_consumption_option,1%> あり
                <%= f.text_field :power_consumption, :placeholder =>"消費電力" %> W
                <br>
                <%= f.radio_button :power_consumption_option,0%> なし
              </td>
            </tr>


            <tr>
              <th class="col-xs-2">消費ガス量</th>
              <td>
                <%= f.radio_button :fuel_economy_option,1%> あり
                <%= f.text_field :fuel_economy, :placeholder =>"消費ガス量" %> kg/h
                <br>
                <%= f.radio_button :fuel_economy_option,0%> なし(0 kg/h)
              </td>
            </tr>



          </table>
       </div>

     <div class="col-xs-1"></div>
  </div>
  <div class="col-xs-9"></div>
   <%= f.submit "更新" %>
<% end %>
<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-2"><h4>団体一覧</h4></div>
  <div class="col-xs-9"></div>
  <div class="col-xs-1"></div>
</div>

<div class="row">
  <div class="col-xs-1"></div>
    <div class="col-xs-10">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">団体ID</th>
            <th scope="col">団体名</th>
            <th scope="col">代表者</th>
            <th scope="col">代表者番号</th>
            <th scope="col">販売品目</th>
            <th scope="col">出店日</th>
            <th scope="col">レンタル品</th>
            <th scope="col">ガス</th>
            <th scope="col">合計金額</th>
            <th scope="col"></th>
          </tr>
        </thead>

        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <th scope="row"><%= group.id %></th>
              <td><%= link_to group.group_name ,"/admin/groups/#{group.id}" ,id: "group_#{group.id}"%></td>
              <td><%= group.representative_name %></td>
              <td><%= group.representative_telephone_number %></td>
              <td>
                <% if group.request.present? %>
                <%= group.request.item_for_sale %>
                <% else %>
                <%= "ー" %>
                <% end %>
              </td>
              <td>
                <% if group.request.present? %>
                <%= group.request.date %>
                <% else %>
                <%= "ー" %>
                <% end %>
              </td>
              <td>
                <% group.order_items.each do |order_item| %>
                  <p><%= order_item.item.name %> × <%= order_item.amount %></p>
                <% end %>
              </td>
              <td>
                <% group.order_gases.each do |order_gase| %>
                  <p><%= order_gase.gase.name %> × <%= order_gase.amount %></p>
                <% end %>
              </td>
              <td>
                <% if group.request.present? %>
                ¥<%= group.request.total_payment %>
                <% else %>
                <%= "ー" %>
                <% end %>
              </td>
              <td><%= button_to '削除する', admin_group_path(group.id), method: :delete, data: {confirm: 'この団体を削除しますか？'}, class: 'fbtn' ,id: "destroy_group#{group.id}"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <div class="col-xs-1"></div>
</div>
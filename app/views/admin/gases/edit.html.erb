<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-2"><h4>ガス編集</h4></div>
  <div class="col-xs-8"></div>

</div>

<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-7">
	<%= form_for(@gase,url:admin_gase_path(@gase.id),method: :patch) do |f| %>

      <table class="table table-noborder">
        <tr>
          <th>ガス名称</th>
          <td><%= f.text_field :name, :placeholder =>"例: ガス 5 kg" %></td>
        </tr>
        <tr>
          <th>ガス容量 (kg)</th>
          <td><%= f.text_field :amount, :placeholder =>"例: 5" %></td>
        </tr>
        <tr>
          <th>価格(税抜)</th>
          <td><%= f.text_field :price, :placeholder =>"例: 2200" %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td>
            <%= f.radio_button :is_active,1%> 有効
            <br>
            <%= f.radio_button :is_active,0%> 無効
            <div class="text-center">
                <%= f.submit "変更を保存する"%>
            </div>
          </td>
        </tr>
      </table>
	<% end %>
  </div>
  <div class="col-xs-1"></div>
</div>
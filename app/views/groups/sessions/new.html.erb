<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-4"><h4>登録済みの場合はこちらからログイン</h4></div>
</div>


<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :"代表者メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "groups/shared/links" %>

</div>
</div>